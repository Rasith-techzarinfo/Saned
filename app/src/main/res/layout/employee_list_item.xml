<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notify_card"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:elevation="8dp"
            android:src="@drawable/ic_user"
            app:civ_border_color="@color/white_smoke"
            app:civ_border_width="0dp"
            tools:targetApi="lollipop" />


        <TextView
            android:id="@+id/name"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:visibility="visible"
            android:maxLines="1"
            android:text="Adam D"
            android:textAllCaps="false"
            android:textColor="@color/heading"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_below="@+id/name"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:lineSpacingExtra="1dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Project Manager"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_below="@+id/designation"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:text="adam@test.com"
            android:textColor="@color/grey"/>

        <ImageView
            android:id="@+id/expand_items"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"
            android:visibility="visible"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            tools:targetApi="lollipop" />

        <ImageView
            android:id="@+id/expand_items_two"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_arrow_drop_up_24"
            tools:targetApi="lollipop" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/bg_layout"
        android:id="@+id/expand_view_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/expand_items2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:elevation="8dp"
            android:src="@drawable/ic_baseline_person_24"
            tools:targetApi="lollipop" />

        <ImageView
            android:id="@+id/expand_items3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:elevation="8dp"
            android:src="@drawable/ic_baseline_people_24"
            tools:targetApi="lollipop" />

        <ImageView
            android:id="@+id/expand_items4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:elevation="8dp"
            android:src="@drawable/ic_baseline_bar_chart_24"
            tools:targetApi="lollipop"
            app:tint="#2DE92B" />

        <ImageView
            android:id="@+id/expand_items5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:elevation="8dp"
            android:src="@drawable/ic_baseline_person_search_24"
            tools:targetApi="lollipop" />
    </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>